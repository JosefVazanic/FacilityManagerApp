<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".DetailObjectTask" >

    <TextView
        android:id="@+id/textViewTaskNameLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_object_task_detail_workflow" />

    <TextView
        android:id="@+id/textViewTaskName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewTaskDescriptionLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/activity_object_task_detail_description" />

    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="15dp" >

        <Switch
            android:id="@+id/taskDetailSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="DO"
            android:textOn="OK" />
    </LinearLayout>

</LinearLayout>